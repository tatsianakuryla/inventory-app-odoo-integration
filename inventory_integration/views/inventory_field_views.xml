<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_inventory_field_tree" model="ir.ui.view">
        <field name="name">inventory.field.tree</field>
        <field name="model">inventory.field</field>
        <field name="arch" type="xml">
            <tree string="Field Aggregations" create="false" delete="false">
                <field name="sequence" widget="handle"/>
                <field name="field_name"/>
                <field name="field_type" widget="badge"/>
                <field name="aggregation_summary"/>
            </tree>
        </field>
    </record>

    <record id="view_inventory_field_form" model="ir.ui.view">
        <field name="name">inventory.field.form</field>
        <field name="model">inventory.field</field>
        <field name="arch" type="xml">
            <form string="Field Aggregation" create="false" delete="false">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="field_name"/>
                        </h1>
                        <h3>
                            <field name="field_type" widget="badge"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group>
                            <field name="inventory_import_id"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Number Statistics" invisible="field_type != 'number'">
                            <group>
                                <group>
                                    <field name="number_min" readonly="1"/>
                                    <field name="number_max" readonly="1"/>
                                </group>
                                <group>
                                    <field name="number_average" readonly="1"/>
                                    <field name="number_count" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Text Statistics" 
                              invisible="field_type not in ['text', 'long', 'link']">
                            <group>
                                <group>
                                    <field name="text_unique_count" readonly="1"/>
                                    <field name="text_total_count" readonly="1"/>
                                </group>
                            </group>
                            <separator string="Top Values"/>
                            <field name="text_top_values" readonly="1" nolabel="1" 
                                   placeholder="No top values available"/>
                        </page>

                        <page string="Boolean Statistics" invisible="field_type != 'boolean'">
                            <group>
                                <group>
                                    <field name="boolean_true_count" readonly="1"/>
                                    <field name="boolean_false_count" readonly="1"/>
                                </group>
                                <group>
                                    <field name="boolean_null_count" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Raw Data">
                            <field name="aggregation_json" readonly="1" nolabel="1" 
                                   widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_inventory_field_list" model="ir.actions.act_window">
        <field name="name">Field Aggregations</field>
        <field name="res_model">inventory.field</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('inventory_import_id', '=', active_id)]</field>
        <field name="context">{'default_inventory_import_id': active_id}</field>
    </record>
</odoo>
