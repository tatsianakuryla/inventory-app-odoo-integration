<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_inventory_import_wizard_form" model="ir.ui.view">
        <field name="name">inventory.import.wizard.form</field>
        <field name="model">inventory.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Inventory from API">
                <group invisible="state != 'draft'">
                    <group>
                        <field name="api_token" password="False" 
                               placeholder="Enter your API token here..."/>
                        <field name="api_base_url" 
                               placeholder="http://localhost:3000"/>
                    </group>
                    <group>
                        <field name="inventory_import_id" 
                               options="{'no_create': True, 'no_open': True}"
                               domain="[('state', '=', 'imported')]"/>
                    </group>
                </group>
                
                <group invisible="state != 'error'">
                    <field name="error_message" readonly="1" nolabel="1" 
                           class="alert alert-danger"/>
                </group>
                
                <group invisible="state != 'done'">
                    <div class="alert alert-success text-center">
                        <p><strong>Import completed successfully!</strong></p>
                        <p>Click "Close" to view the imported inventory.</p>
                    </div>
                </group>
                
                <footer>
                    <button string="Import" name="action_import" type="object" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
                
                <field name="state" invisible="1"/>
            </form>
        </field>
    </record>
    <record id="action_inventory_import_wizard" model="ir.actions.act_window">
        <field name="name">Import from API</field>
        <field name="res_model">inventory.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_inventory_import"/>
    </record>
</odoo>
